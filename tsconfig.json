{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleDetection": "force",
        "allowJs": true,

        "moduleResolution": "NodeNext",

        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,

        "noUnusedParameters": true,
        "noPropertyAccessFromIndexSignature": true
    },
    "exclude": ["node_modules"]
}
